
public class PersonTest {
	public static void main(String[] args) {
		
		Person person = new Person();
		person.think();
		
	}
}

class Person
{
	//1. function without argument | without return type
	
	//returnType				without arugment
	void 				think(    ) {
		System.out.println("Person is thinking....");
	}
}


























//Java's class bydefault access specifier is DEFAULT / Friendly / accessible
class Person // it is a structure to hold personal details
{
	 char gender;
	 int age;
	 String name;
	
	 
	
