
public class PersonTest {
	public static void main(String[] args) {
		
		Person person = new Person();
		person.think();
		person.walking(500);
		person.workout(60);
		
	}
}

class Person
{
	//1. function WITHOUT argument | WITHOUT return type
	
	//returnType				without arugment
	void 				think(    ) {
		System.out.println("Person is thinking....");
	}
	
	//2. function WITH argument | BUT WITHOUT return type
	void walking(int steps)
	{
		System.out.println("Person is walking "+steps+" STEPS...");
	}
	
	//3. function WITH arguments | AND WITH return type
	int workout(int minutes)
	{
		System.out.println("Person doing workout for "+minutes+" MINUTES");
		return minutes*2; // x calories burnt out
	}
}
























